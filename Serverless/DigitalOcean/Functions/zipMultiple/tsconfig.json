{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2021",
        "sourceMap": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "verbatimModuleSyntax": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts"
    ]
}